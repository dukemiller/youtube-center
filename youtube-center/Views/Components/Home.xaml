<UserControl x:Class="youtube_center.Views.Components.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:youtube_center.Views.Components"
             mc:Ignorable="d" 
             DataContext="{Binding Source={StaticResource Locator}, Path=Home}"
             d:DesignHeight="710" d:DesignWidth="1330">
    <DockPanel >
        <DockPanel Dock="Left" LastChildFill="False" Margin="8">
            <Button Content="Left" DockPanel.Dock="Top" />
        </DockPanel>
        <DockPanel Dock="Bottom" LastChildFill="False" Margin="8">
            <Button DockPanel.Dock="Right" Content="Test" Command="{Binding TestCommand}" />
            <Button DockPanel.Dock="Right" Content="Add" Command="{Binding AddCommand}" />
        </DockPanel>
        <ListBox ItemsSource="{Binding Videos}" SelectedItem="{Binding SelectedVideo}"
                 Background="#2B2B2B"
                 VerticalContentAlignment="Stretch"
                 HorizontalContentAlignment="Stretch">
            <ListBox.ItemContainerStyle>
                <Style>
                    <Setter Property="FrameworkElement.Margin" Value="0, 5" />
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel Width="300">
                        <DockPanel.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Watch on youtube" />
                                <MenuItem Header="Watch with streamlink" />
                                <MenuItem Header="Mark as watched" />
                            </ContextMenu>
                        </DockPanel.ContextMenu>
                        <DockPanel DockPanel.Dock="Bottom" Margin="4" HorizontalAlignment="Stretch">
                            <TextBlock DockPanel.Dock="Top" TextWrapping="Wrap" FontWeight="Bold" Margin="5,0"
                                       FontSize="18" Text="{Binding Title}" />
                            <TextBlock DockPanel.Dock="Top" TextWrapping="Wrap" FontWeight="SemiBold"
                                       TextDecorations="Underline"
                                       Margin="5,10,0,-5"
                                       Text="{Binding Author.Name}" />
                            <DockPanel HorizontalAlignment="Stretch" >
                                <Label Foreground="#6E6E6E" DockPanel.Dock="Left" Content="{Binding Views, Converter={StaticResource ViewsConverter}}" />
                                <Label Foreground="#6E6E6E" Content="•"/>
                                <Label Foreground="#6E6E6E" DockPanel.Dock="Right" Content="{Binding Uploaded, Converter={StaticResource DateConverter}}" />
                            </DockPanel>
                        </DockPanel>
                        <Border Background="Black">
                            <Image Source="{Binding Thumbnail.Url}"
                                   HorizontalAlignment="Center"
                                   Width="240"
                                   Height="180" />
                        </Border>
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="4" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
    </DockPanel>
</UserControl>
